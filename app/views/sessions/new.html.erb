<Login>

<%= form_tag '/users/sessions', :method => :post do %>
   <%= hidden_field_tag :requested_url, params[:requested_url]%>
  <p>
    <%= label_tag(:email) %><br />
    <%= text_field_tag (:email) %>
  </p>
  <p>
    <%= label_tag(:password) %><br />
    <%= password_field_tag(:password) %>
  </p>
  <p><%= submit_tag("Submit") %></p>
<% end %>


